        .yes {
            background-color: #ff69b4;
            color: white;
        }
        .no {
            background-color: #ff0000;
            color: white;
            position: absolute;
        }
        .heart {
            position: absolute;
            color: red;
            font-size: 24px;
            animation: float 2s linear infinite;
